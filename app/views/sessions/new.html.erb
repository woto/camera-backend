<% content_for :title, "Login" %>

<div class="container">
  <h1>Login</h1>

  <%= form_with url: session_path, method: :post, class: "auth-form" do %>
    <div class="form-group">
      <%= label_tag :username, "Username" %>
      <%= text_field_tag :username, params[:username], required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Password" %>
      <%= password_field_tag :password, nil, required: true %>
    </div>

    <%= submit_tag "Sign in", class: "primary-button" %>
  <% end %>
</div>
