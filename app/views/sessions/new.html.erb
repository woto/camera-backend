<% content_for :title, "Вход" %>

<div class="page">
  <h1>Вход</h1>

  <%= form_with url: session_path, method: :post, class: "auth-form" do %>
    <div class="form-group">
      <%= label_tag :username, "Имя пользователя" %>
      <%= text_field_tag :username, params[:username], required: true, autofocus: true %>
    </div>

    <div class="form-group">
      <%= label_tag :password, "Пароль" %>
      <%= password_field_tag :password, nil, required: true %>
    </div>

    <%= submit_tag "Войти", class: "primary-button" %>
  <% end %>
</div>
