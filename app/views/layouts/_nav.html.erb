<ul class="space-y-2">
  <li>
    <%= link_to events_path, class: "flex items-center gap-4 px-5 py-3.5 rounded-2xl font-black transition-all duration-500 group #{controller_name == 'events' && action_name == 'index' ? 'bg-white/10 text-white shadow-[0_10px_30px_rgba(0,0,0,0.3)] border border-white/5' : 'text-text-secondary hover:bg-white/5 hover:text-white'}" do %>
      <div class="w-8 h-8 rounded-lg flex items-center justify-center transition-all duration-500 <%= controller_name == 'events' && action_name == 'index' ? 'bg-accent-purple text-white shadow-lg shadow-accent-purple/30' : 'bg-white/5 text-text-secondary group-hover:bg-white/10 group-hover:text-white' %>">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
      </div>
      <span class="text-[13px] tracking-tight">События</span>
    <% end %>
  </li>
  <li>
    <%= link_to new_room_selection_path, data: { turbo_frame: "modal" }, class: "flex items-center gap-4 px-5 py-3.5 rounded-2xl font-black text-text-secondary hover:bg-white/5 hover:text-white transition-all duration-500 group" do %>
      <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center transition-all duration-500 group-hover:bg-white/10 group-hover:text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="9" y1="3" x2="9" y2="21"></line></svg>
      </div>
      <span class="text-[13px] tracking-tight">Комната</span>
    <% end %>
  </li>
  <% unless current_user %>
    <li>
      <%= link_to new_session_path, data: { turbo_frame: "modal" }, class: "flex items-center gap-4 px-5 py-3.5 rounded-2xl font-black text-text-secondary hover:bg-white/5 hover:text-white transition-all duration-500 group" do %>
        <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center transition-all duration-500 group-hover:bg-white/10 group-hover:text-white">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg>
        </div>
        <span class="text-[13px] tracking-tight">Войти</span>
      <% end %>
    </li>
  <% end %>
  <% if current_user %>
    <li>
      <%= link_to session_path, data: { turbo_method: :delete, turbo_confirm: "Выйти?" }, class: "flex items-center gap-4 px-5 py-3.5 rounded-2xl font-black text-text-secondary hover:bg-white/5 hover:text-white transition-all duration-500 group" do %>
        <div class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center transition-all duration-500 group-hover:bg-white/10 group-hover:text-white text-red-400/60 group-hover:text-red-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
        </div>
        <span class="text-[13px] tracking-tight">Выйти</span>
      <% end %>
    </li>
  <% end %>
</ul>

