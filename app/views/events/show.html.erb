                    <%= link_to capture.hls_manifest_path, capture.hls_manifest_path, class: "text-[11px] underline text-white/80", target: "_blank", rel: "noopener" %>
                    <%= button_to "–ü–µ—Ä–µ–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å HLS", generate_hls_event_path(@event, capture_id: capture.id), method: :post, class: "btn-ghost text-xs py-1" %>
                  <% elsif capture.hls_processing? %>
                    <span class="text-[11px] text-yellow-300">–ì–µ–Ω–µ—Ä–∞—Ü–∏—è HLS ...</span>
                    <%= button_to "–û–±–Ω–æ–≤–∏—Ç—å —Å—Ç–∞—Ç—É—Å", event_path(@event), method: :get, class: "btn-ghost text-xs py-1" %>
                  <% else %>
                    <%= button_to "–°–≥–µ–Ω–µ—Ä–∏—Ä–æ–≤–∞—Ç—å HLS", generate_hls_event_path(@event, capture_id: capture.id), method: :post, class: "btn-ghost text-xs py-1" %>
                  <% end %>
                  <% if capture.hls_error.present? %>
                    <div class="text-[11px] text-red-400 ml-2">–û—à–∏–±–∫–∞: <%= capture.hls_error %></div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
